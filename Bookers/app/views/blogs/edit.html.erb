<h1>Editing Book</h1>
<%= form_for(@blog) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit "Update Book" %><br>
<% end %>

<%= link_to "Show",blog_path, class: 'show_#{id}' %>
<%= link_to "Back","/blogs",  class: 'back' %>