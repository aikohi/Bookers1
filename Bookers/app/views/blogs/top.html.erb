<!DOCTYPE html>
<html>
<head>
	<title>Books</title>
</head>

<body>

 <header>
  <div class="flash">
  <%= flash[:success] %>
  </div>
	<h1>Books</h1>
 </header>

 <table>
  <thead>
   <tr>
	  <th>Title</th>
	  <th>Body</th>
	  <th></th>
   </tr>
  </thead>

 <tbody>
  <% @blogs.each do |blog| %>
    <tr>
	 <td><%= blog.title %>&nbsp;</td>
	 <td>&nbsp;<%= blog.body %></td>

   	 <td>&nbsp;
   	  <%= link_to "Show", blog_path(blog.id), class: "show_#{blog.id}" %>&nbsp;
      <%= link_to "Edit",edit_blog_path(blog.id), class: "edit_#{blog.id}" %>&nbsp;
      <%= link_to "Destroy", blog_path(blog.id), class: "destroy_#{blog.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   <% end %>
  </tbody>
 </table>
</body>

<div>
&nbsp;
</div>

<h2>New book</h2>
<%= form_for (@blog) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "book_title" %>

 <h4>Body</h4>
 <%= f.text_area :body, class: "book_body" %>

<br><%= f.submit "Create Book" %><br>

<% end %>
</html>