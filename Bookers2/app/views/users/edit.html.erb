<section class="userinfo">
	<h1>User info</h1>
 	<%= form_for(@user) do |f| %>
		<div class="namelabel">
       	 <label for="name">Name</label>
        	<%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"user[name]" %>
   		 </div>

    	<div class="imagelabel">
     		<label class="control-label sr-only" for="inputEmail">Image</label>
    		<%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class: "user-edit-form" %>
    	</div><br>

    	<div class="introductionlabel">
     		<label for="introduction">Introduction</label>
        		<%= f.text_area :introduction, autofocus: true, id:"inputEmail",size:"30*20" %>
        </div>

         <%= f.submit "Update User" %>
<% end %>